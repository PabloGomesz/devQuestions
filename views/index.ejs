<%- include('partials/header.ejs') %>

<body>
<%- include('partials/navbar.ejs') %>

<div class="container">
    <br>
    <h1>Perguntas</h1>
    <a href="/perguntar" class="btn btn-success">Perguntar</a>
    <hr>
    <br>
    <% perguntas.forEach(pergunta => { %>
        <br>
        <div class="card">
            <div class="card-body">
                <h3><%= pergunta.titulo %></h3>
            </div>
            <br>
            <div class="card-footer">
                <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-success">Responder</button></a>
            </div>
        </div>
        
      
   <% }) %>
</div>


</body>
